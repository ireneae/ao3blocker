   {
      "name": "AO3 Editor",
      "version": "1.0.1",
      "manifest_version": 3,
      "content_scripts": [
        {
          "matches": [
            "https://archiveofourown.org/*"
          ],
          "js": ["src/content.js"]
        }
      ],
      "background": {
        "service_worker":  "src/background.js" 
      },
      "permissions": [
        "contextMenus",
        "storage",
        "declarativeContent"
      ],
      "action": {
        "default_popup": "src/popup.html"
      },
      "options_page": "src/options.html",
      "icons": {
        "48": "icons/ao3edit48.png",
        "128": "icons/ao3edit128.png"
      }
    }
